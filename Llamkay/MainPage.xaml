<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Llamkay.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Llamkay.Models"
    xmlns:vm="clr-namespace:Llamkay.ViewModels"
    Title="Llamkay - Job Board"
    x:DataType="vm:MainViewModel">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="20"
                Spacing="15">

                <!--  Header  -->
                <Border
                    Padding="20"
                    BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="🦙 Llamkay Job Board"
                            TextColor="White" />
                        <Label
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="Powered by The Muse API"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <!--  API Test Section  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource Secondary}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="🔧 API Test" />
                        <Button
                            BackgroundColor="{StaticResource Primary}"
                            Command="{Binding TestApiCommand}"
                            Text="Test API Connection"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <!--  Search Section  -->
                <Border
                    Padding="15"
                    BackgroundColor="Red"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="🔍 Job Search" />

                        <Entry
                            Placeholder="Search keyword (e.g., developer, designer...)"
                            Text="{Binding SearchKeyword}" />

                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="10">
                            <Picker
                                Title="Select Category"
                                Grid.Column="0"
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}" />
                            <Picker
                                Title="Select Location"
                                Grid.Column="1"
                                ItemsSource="{Binding Locations}"
                                SelectedItem="{Binding SelectedLocation}" />
                        </Grid>

                        <Grid
                            ColumnDefinitions="*,*,*"
                            ColumnSpacing="10">
                            <Button
                                Grid.Column="0"
                                BackgroundColor="{StaticResource Success}"
                                Command="{Binding SearchJobsCommand}"
                                Text="Search Jobs"
                                TextColor="White" />
                            <Button
                                Grid.Column="1"
                                BackgroundColor="{StaticResource Info}"
                                Command="{Binding LoadCompaniesCommand}"
                                Text="Load Companies"
                                TextColor="White" />
                            <Button
                                Grid.Column="2"
                                BackgroundColor="{StaticResource Warning}"
                                Command="{Binding ClearResultsCommand}"
                                Text="Clear"
                                TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!--  Status  -->
                <Border
                    Padding="10"
                    BackgroundColor="{StaticResource Gray100}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="{Binding StatusMessage}" />
                </Border>
                <!--  Jobs Results  -->
                <StackLayout
                    Padding="15"
                    BackgroundColor="Pink"
                    IsVisible="True">

                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="💼 Job Results"
                            VerticalOptions="Center" />
                        <Label
                            FontSize="14"
                            Text="{Binding Jobs.Count, StringFormat='({0} jobs found)'}"
                            TextColor="Red"
                            VerticalOptions="Center" />
                    </StackLayout>

                    <Label
                        FontSize="14"
                        Text="{Binding HasJobs, StringFormat='HasJobs: {0}'}"
                        TextColor="Blue" />
                    <CollectionView
                        BackgroundColor="Blue"
                        HeightRequest="400"
                        ItemsSource="{Binding Jobs}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:TheMuseJob">
                                <StackLayout
                                    Margin="5"
                                    Padding="10"
                                    BackgroundColor="White">
                                    <Label
                                        BackgroundColor="Yellow"
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="{Binding Name}" />
                                    <Label
                                        BackgroundColor="LightBlue"
                                        FontSize="14"
                                        Text="{Binding Company.Name}" />
                                    <Label
                                        BackgroundColor="LightGreen"
                                        FontSize="12"
                                        Text="{Binding Type}" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!--  Companies Results  -->
                <Border
                    Padding="15"
                    IsVisible="True"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <StackLayout
                            Orientation="Horizontal"
                            Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="🏢 Company Results"
                                VerticalOptions="Center" />
                            <Label
                                FontSize="14"
                                Text="{Binding Companies.Count, StringFormat='({0} companies found)'}"
                                TextColor="{StaticResource Primary}"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <CollectionView
                            BackgroundColor="Blue"
                            HeightRequest="400"
                            ItemsSource="{Binding Companies}"
                            SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:TheMuseCompany">
                                    <Border
                                        Margin="5"
                                        Padding="15"
                                        BackgroundColor="White"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <StackLayout Spacing="8">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                LineBreakMode="WordWrap"
                                                Text="{Binding Name}"
                                                TextColor="Black" />
                                            <Label
                                                FontSize="12"
                                                LineBreakMode="WordWrap"
                                                MaxLines="3"
                                                Text="{Binding Description}"
                                                TextColor="{StaticResource Gray600}" />
                                        </StackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Loading Overlay  -->
        <Grid
            BackgroundColor="#80000000"
            IsVisible="{Binding IsLoading}">
            <Border
                BackgroundColor="White"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="200">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout
                    HorizontalOptions="Center"
                    Spacing="15"
                    VerticalOptions="Center">
                    <ActivityIndicator
                        IsRunning="True"
                        Color="{StaticResource Primary}" />
                    <Label
                        HorizontalOptions="Center"
                        Text="Loading..." />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>

</ContentPage>
